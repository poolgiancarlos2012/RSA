#tooltip {
	position: absolute;
	z-index: 3000;
	border: 1px solid #111;
	background-color: #83AEF7;
	border:2px solid #6694E3;
	color:#FFFFFF;
	font-family:Arial, sans-serif;
	font-size:13px;
	font-weight:bold;
	padding: 5px;
	opacity: 0.85;
	filter:alpha(opacity=50);
	-moz-opacity:0.85;
	-khtml-opacity:0.85;
	-webkit-opacity:0.85;
	-moz-border-radius:3px;
	-webkit-border-radius:3px;
	border-radius:3px;
}
#tooltip h3, #tooltip div { margin: 0; }
