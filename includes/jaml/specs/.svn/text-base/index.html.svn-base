<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <title>Jaml Specs</title>
  </head>
  <body>
    <script type="text/javascript" src="../Jaml.js"></script>
    <script type="text/javascript" src="../Node.js"></script>
    <script type="text/javascript" src="../TextNode.js"></script>
    <script type="text/javascript" src="../vendor/jspec/lib/jspec.js"></script>
    
    <script type="text/javascript" charset="utf-8">
      Jaml.template("mySub", function() {
        ul(
          li("First"),
          li("Second"),
          li("Third")
        )
      });
    
      Jaml.template("myTemplate", function(data) {
        data = data || {};
        
        html(
          head(
            link({preset: "contentType"}),
            title(data.title)
          ),
          body(
            div({id: 'loading-mask'}),
            div({id: 'loading'},
              div({cls: 'loading-indicator'}),
              render("mySub")
            )
          )
        );
      });
      
      var res = Jaml.render('myTemplate', {
        title: 'Some Title'
      });
      
      for (var i=0; i < res.length; i++) {
        // console.log(res[i]);
      };
      
      console.log(res);
    </script>
  </body>
</html>